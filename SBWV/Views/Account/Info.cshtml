@using SBWV.Models.ViewModels
@using SBWV.Controllers

@model IEnumerable<BookVM>

@{
    ViewData["Title"] = "Личный кабинет";
}

    

<style>
    .responsive-image {
        width: 33%;
        min-height:80px;
        height: auto;
        max-width: 600px;
        display: block;
        margin: 0 auto;
    }
</style>
<style>
    .new-section {
        border-radius: 30px;
        height: 100%;
        width: 200px;
        margin-bottom: 10px;
        margin-top: 10px;
        padding: 20px;
        text-align: center;
        background-color:whitesmoke;
        opacity: 90%;
        background-blend-mode:soft-light;
        display:inline-grid;
        box-shadow: 2px 1px 1px gray;
    }
</style>
<style>
    .inline-links{
    display: flex;
    gap: 10mpx;
    text-align:center;
    }
</style>

<h1>@ViewData["Title"]</h1>
<br />

@Html.ActionLink("Добавить книгу", "Create", "Books", new { @class = "text-dark" })



<br />
Мои обьявления:
<br />




@if (Model.Count() == 0)
{
    <h3>Ничего не найденно</h3>
}

@foreach (var b in Model)
{
   

    <div class="new-section">

        @if (b.Src.Length!=0)
        {
            <img src="@b.Src.First()" alt="Photo" width="70" height="100" class="responsive-image" />
        }
        else
        {
            
        <img src="~/images/emptyList.jpg" alt="Photo" width="70" height="100" class="responsive-image" />
        }
        
      

        <b>@Html.LabelFor(x => b.Title,"Название:")</b>
        @Html.DisplayFor(x => b.Title)

        <br />

        <b>@Html.LabelFor(x => b.Author ,"Автор:")</b>
        @Html.DisplayFor(x => b.Author)

        <br />
        <div class="inline-links">
            <b>Обмен:</b> <span>&nbsp;</span>
            @Html.DisplayFor(x => b.Swap)
        </div>
      

        
        <b>Цена:</b>
        <td>@b.Price</td>
        @Html.LabelFor(x=>b.Info,"Информация:")
        @Html.Display("Info")

    
        <div class="inline-links">
            @Html.ActionLink("подробнее", "Details", "Books", new { idBook = b.Id }) <span>&nbsp;</span>
            @Html.ActionLink("изменить", "Edit", "Books", new { idBook = b.Id })
           
        </div>
        <div class="inline-links">

            <span>&nbsp;</span>
            <span>&nbsp;</span>
            @Html.ActionLink("удалить", "Delete", "Books", new { idBook = b.Id }, FormMethod.Post)
        </div>
        
    </div>
    
}