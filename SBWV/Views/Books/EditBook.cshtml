 <form asp-action="edit" asp-controller="Books" asp-route-id="@Model.Id" id="catalog" enctype="multipart/form-data" style="text-align:center; align-content:center;align-items:center;">

            <h1>Редактировать</h1>

            <div class="list">

                
                   
