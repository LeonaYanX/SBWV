            padding: 0 10px;
            align-items: center;
            align-content: center;
        }
</style>

<style>
    .file-input-container {
        overflow: hidden;
        position: relative;
    }

    .file-input-label {
        background: #f3f2ec;
        padding: 8px 15px;
        cursor:pointer;
        font-family: Raleway, sans, sans-serif;
        font-size: 14px;
        text-align: center;
        color: #daa556;
        display: flex;
        flex-flow: row nowrap;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

        .file-input-label:hover {
            text-decoration: underline;
        }

    .file-input {
        width: 0.1px;
        height: 0.1px;
        opacity: 0;
        position: absolute;
        z-index: -1;
    }
</style>


<style>
    .new-section {
        border-radius: 25px;
        height: 100%;
        width: 300px;
        margin-bottom: 10px;
        margin-top: 10px;
        padding: 20px;
        text-align: left;
        background: #FFF4A3;
    }
</style>

