                <script type="text/javascript">

                    function onDelete(id) {
                        if (!confirm("Удалить фото?"))
                            return;

                        $.ajax({
                            url: '@Url.Action("DeletePhoto", "Books")',
                            data: { id },
                            success: function (result) {
                                $('#' + id).remove();
                                //alert(result.msg);
                            },
                            error: function (result) {
                                alert(result.msg);
                            }
                        })
                    }

