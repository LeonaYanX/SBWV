@using SBWV.Models.ViewModels

@model BookVM

<style>
    #container
    {
    display:flex;
    flex-flow: column;
    justify-content: center;
    justify-items: center;
    align-items: center;
    align-content: center;
    }
    #container .login {
        display:flex;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 100px;
        align-items: center;
        flex-flow: column;
        justify-content: center;
        text-align: center;
        row-gap: 10px;
        border: 1px solid ghostwhite;
    }

