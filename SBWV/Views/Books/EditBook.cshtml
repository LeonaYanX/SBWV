@using SBWV.Models.ViewModels

@model BookVM



<style>
    .new-section {
        border-radius: 25px;
        height: 100%;
        width: 300px;
        margin-bottom: 10px;
        margin-top: 10px;
        padding: 20px;
        text-align: left;
        background: #FFF4A3;
    }
</style>

<h2>Редактировать</h2>



<form asp-action="edit" asp-controller="Books" asp-route-id="@Model.Id">

    <p>
        <label asp-for="Title">Название</label><br />
        <input type="text" asp-for="Title" />
    </p>
    <p>
        <label asp-for="Author">Автор</label><br />
        <input type="text" asp-for="Author"></input>
    </p>
    <p>
        <label asp-for="Price">Цена</label><br />
        <input type="number" asp-for="Price"></input>
    </p>
    <p>
        <label asp-for="Swap">Обмен</label><br />
        <input type="checkbox" asp-for="Swap"></input>
    </p>
    <p>
        @Html.DropDownListFor(m => m.Category, @ViewBag.Categories as List<SelectListItem>)
        <br />

    </p>
    <p>
        <label asp-for="Info">Информация</label><br />
        <input type="text" asp-for="Info" />
    </p>
    <p>
        <style>
            .container {
                position: relative;
                width: 100%;
                max-width: 400px;
            }

                .container img {
                    width: 50%;
                    height: auto;
                }

                .container .btn {
                    border-radius: 5px;
                }

            .btn {
                position: absolute;
                top: 65%;
                left: 32%;
                /*  transform: translate(-50%, -50%);
                        -ms-transform: translate(-50%, -50%); */

                text-align: center;
                color: black;
                font-size: 10px;
                cursor: pointer;
                /* border: none; */
                /**/
                background-color: white;
            }

                .btn:hover {
                    /*    background-color: gray; */
                    color: red;
                }

        </style>

        <script type="text/javascript">

            function onDelete(id) {
                if (!confirm("Удалить фото?"))
                    return;

                $.ajax({
                    url: '@Url.Action("DeletePhoto", "Books")',
                    data: { id },
                    success: function (result) {
                        $('#' + id).remove();
                        //alert(result.msg);
                    },
                    error: function (result) {
                        alert(result.msg);
                    }
                })
            }

            // function doUpdate() {

            //     var formData = {
